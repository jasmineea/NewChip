 <%= render 'layouts/sidebar' %>
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <% @meals.each do |meal| %>
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h5><%= meal.name %></h5>
            </div>
            <div class="card-text">
                <p><%= meal.ingredients %></p>
            </div>
        </div>
    </div>
    <% end %>
</main>
